<phpunit colors="true" no-globals-backup="true">
    <testsuites>
        <testsuite name="mSVG" >
            <directory>.</directory>
        </testsuite>
    </testsuites>
    <logging>
        <log type="testdox-html" target="../build/logs/testdox/index.html" />
        <log    type="coverage-html"
                target="../build/coverage/"
                title="mSVG"
                charset="UTF-8"
                yui="true"
                highlight = "true"
                lowUpperBound="35"
                highLowerBound="70" />

        <log type="coverage-clover" target="../build/logs/phpunit.coverage.xml"/>
        <log type="junit" target="../build/logs/phpunit.xml" logIncompleteSkipped="false"/>
    </logging>
</phpunit>
